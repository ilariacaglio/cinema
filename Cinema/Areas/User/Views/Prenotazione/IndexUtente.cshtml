@model IEnumerable<Prenotazione>
@{
    ViewData["Title"] = "Le mie prenotazioni";
}

<div class="row">
    <h2 class="my-5">Le mie prenotazioni:</h2>
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th class="col-4">Film</th>
                <th class="col-2">Data</th>
                <th class="col-2">Ora</th>
                <th class="col-4"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-4">@item.Spettacolo.IdFilmNavigation.Titolo</td>
                    <td class="col-2">@item.DataS</td>
                    <td class="col-2">@item.OraS</td>
                    <td class="col-4">
                        <button class="btn btn-primary mx-1"> Vedi dettagli</button>
                        <button class="btn btn-info mx-1"> Modifica</button>
                        <button class="btn btn-danger mx-1"> Elimina</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>