@model Cinema.Models.VM.ShoppingCartVM
@{
    ViewData["Title"] = "Carrello";
}

<form method="post">
    <br />
    <div class="container">
        <div class="card my-4">
            <div class="card-header">
                <div class="row">
                    <div class="col-6  pt-2">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Il mio carrello
                    </div>
                    <div class="col-6 text-end">
                        <a asp-area="User" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm">Prenota ancora</a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                @foreach (var item in Model.ListCart)
                {
                    <div class="row">
                        <div class="d-none d-lg-block col-lg-1 text-center py-2">
                            <img src="@item.dettagliPrenotazione.imgFilm" class="rounded" style="width:100%" />
                        </div>
                        <div class="col-12 col-lg-6 pt-md-3">
                            <h5><strong>@item.prenotazione.DataS</strong> <strong>@item.prenotazione.OraS</strong></h5>
                            <p>Sala <small>@item.prenotazione.IdSala</small></p>
                        </div>
                        <div class="col-12 col-lg-5 text-center row">
                            <div class="col-6 text-md-right pt-4">
                                <h6><strong>@item.Price<span class="text-muted" /> €</strong></h6>
                            </div>
                            <div class="col-6 col-sm-4 col-lg-2 text-right pt-2">
                                <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger"> 
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <hr />
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-info"> Totale (€)</span>
                                <strong class="text-info">">@Model.OrderHeader.TotaleOrdine</strong>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                        <a asp-action="Summary" class="btn btn-success form-control">Summary</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>