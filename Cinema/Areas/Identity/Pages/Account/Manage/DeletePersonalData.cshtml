@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container classe1 my-5">
    <h4>Elimina il tuo account</h4>

    <div class="alert" role="alert" style="color:red">
            <strong><i class="bi bi-exclamation-triangle"></i>   La cancellazione del tuo account eliminerà tutti i tuoi dati. Questa operazione è irreversibile.   <i class="bi bi-exclamation-triangle"></i></strong>
    </div>

    <div>
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="w-50 btn btn-lg btn-danger" type="submit" style="display:block; margin:auto">Elimina</button>
        </form>
    </div>
</div>
<style>
    .classe1 {
        border-radius: 34px;
        background: #edf2f4;
        box-shadow: 20px 20px 100px #9da8bc, -20px -20px 100px #ffffff;
        padding: 30px;
        width: 65%;
        display: block;
        margin: auto;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
