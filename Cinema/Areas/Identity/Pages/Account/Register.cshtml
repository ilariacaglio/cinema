@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container classe1 my-5">
    <div class="col-md-12">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center"><i class="bi bi-camera-reels"></i></h2>
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="col-6 my-2">
                    <label asp-for="Input.Nome">Nome</label>
                    <input asp-for="Input.Nome" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Nome" class="text-danger"></span>
                </div>
                <div class="col-6 my-2">
                    <label asp-for="Input.Cognome">Cognome</label>
                    <input asp-for="Input.Cognome" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Cognome" class="text-danger"></span>
                </div>
                <div class="col-6 my-2">
                    <label asp-for="Input.Nascita">Data di nascita</label>
                    <input asp-for="Input.Nascita" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Nascita" class="text-danger"></span>
                </div>
                <div class="col-6 my-2">
                    <label asp-for="Input.Residenza">Indirizzo</label>
                    <input asp-for="Input.Residenza" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Residenza" class="text-danger"></span>
                </div>
                <div class="col-6 my-2">
                    <label asp-for="Input.Sesso">Genere</label>
                    <input asp-for="Input.Sesso" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Sesso" class="text-danger"></span>
                </div>
                <div class="col-6 my-2">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-6 my-2">
                    <label asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col-6 my-2">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-6 my-2">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" aria-label="Role">
                        <option disabled selected>-Select Role-</option>
                    </select>
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-50 btn btn-lg btn-primary" style="display:block;margin:auto">Register</button>
        </form>
    </div>
    <hr />
    <div class="col-md-12 col-md-offset-2">
        <section>
            <h6 class="text-center my-2">Or register with</h6>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                article
                                about setting up this ASP.NET application to support logging in via external services
                            </a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>
<style>
    .classe1 {
        border-radius: 34px;
        background: #edf2f4;
        box-shadow: 20px 20px 100px #9da8bc, -20px -20px 100px #ffffff;
        padding: 30px;
        width: 65%;
        display: block;
        margin: auto;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
