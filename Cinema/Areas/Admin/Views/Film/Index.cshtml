@{
    ViewData["Title"] = "Elenco Film";
}

<div class="row">
    <h2 class="col-6">Elenco Film</h2>
    <p class="col-6 text-end my-2">
        <a asp-area="Admin" asp-action="Upsert">
            <button class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Aggiungi un nuovo Film
            </button>
        </a>
    </p>
</div>
<br />
<table id="tblData" class="table table-bordered rounded-4" style="width:100%">
    <thead>
        <tr class="table-light">
            <th>Titolo</th>
            <th>Durata</th>
            <th>Anno</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>
<style>
    .btn-primary {
        background-color: #264653;
    }

    .btn-danger {
        background-color: #e63946;
    }
</style>
@section Scripts{
    <script src="~/js/Film.js"></script>
}